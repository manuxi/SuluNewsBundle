<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>news_details</key>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>sulu_news.title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
            <tag name="sulu.rlp.part"/>
        </property>

        <property name="routePath" type="route" mandatory="true">
            <meta>
                <title>sulu_admin.url</title>
            </meta>
            <!--https://github.com/sulu/sulu/pull/5933-->
            <params>
                <param name="mode" value="leaf"/>
            </params>
        </property>

        <section name="mainInfo">
            <meta>
                <title>sulu_news.header.main</title>
            </meta>
            <properties>
                <property name="url" type="url" colspan="6">
                    <meta>
                        <title>sulu_news.website</title>
                    </meta>
                    <params>
                        <param name="schemes" type="collection">
                            <param name="https://"/>
                            <param name="http://"/>
                        </param>
                    </params>
                </property>
            </properties>
        </section>

        <section name="text">
            <meta>
                <title>sulu_news.header.text</title>
            </meta>
            <properties>
                <property name="teaser" type="text_area">
                    <meta>
                        <title>sulu_news.teaser</title>
                    </meta>
                </property>
                <property name="description" type="text_editor">
                    <meta>
                        <title>sulu_admin.description</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="additional">
            <meta>
                <title>sulu_news.header.additional</title>
            </meta>
            <properties>
                <property name="image" type="single_media_selection" colspan="6">
                    <meta>
                        <title>sulu_news.mainimage</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>
                <property name="images" type="media_selection">
                    <meta>
                        <title>sulu_news.gallery</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>
            </properties>
        </section>
    </properties>
</form>
