<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd"
>
    <key>news_details</key>

    <properties>
        <section name="mandatory">
            <meta>
                <title>sulu_news.header.mandatory</title>
            </meta>
            <properties>
                <property name="title" type="text_line" mandatory="true">
                    <meta>
                        <title>sulu_news.title</title>
                    </meta>
                    <params>
                        <param name="headline" value="true"/>
                    </params>
                    <tag name="sulu.rlp.part"/>
                </property>

                <property name="routePath" type="route" mandatory="true">
                    <meta>
                        <title>sulu_admin.url</title>
                    </meta>
                    <!--https://github.com/sulu/sulu/pull/5933-->
                    <params>
                        <param name="mode" value="leaf"/>
                    </params>
                </property>

                <property name="type" type="single_select" mandatory="true" colspan="6">
                    <meta>
                        <title>sulu_news.news_type</title>
                    </meta>
                    <params>
                        <param name="default_value"
                               type="expression"
                               value="service('sulu_news.type_selection').getDefaultValue()"
                        />
                        <param name="values"
                               type="expression"
                               value="service('sulu_news.type_selection').getValues()"
                        />
                    </params>
                </property>
                <property name="image" type="single_media_selection" mandatory="true" colspan="6">
                    <meta>
                        <title>sulu_news.mainimage</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>

                <property name="teaser" type="text_area" mandatory="true">
                    <meta>
                        <title>sulu_news.teaser</title>
                    </meta>
                </property>
                <property name="description" type="text_editor" mandatory="true">
                    <meta>
                        <title>sulu_admin.description</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="optional">
            <meta>
                <title>sulu_news.header.optional</title>
            </meta>
            <properties>
                <property name="url" type="url" colspan="6">
                    <meta>
                        <title>sulu_news.link</title>
                    </meta>
                    <params>
                        <param name="schemes" type="collection">
                            <param name="https://"/>
                            <param name="http://"/>
                        </param>
                    </params>
                </property>
                <property name="pdf" type="single_media_selection" colspan="6">
                    <meta>
                        <title>sulu_news.pdf</title>
                    </meta>
                    <params>
                        <param name="types" value="document"/>
                    </params>
                </property>
                <property name="images" type="media_selection">
                    <meta>
                        <title>sulu_news.gallery</title>
                    </meta>
                    <params>
                        <param name="types" value="image"/>
                    </params>
                </property>
            </properties>
        </section>
    </properties>
</form>
